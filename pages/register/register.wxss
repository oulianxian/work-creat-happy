/* pages/test/healthService/addReport/addReport.wxss */
.report-container {
  display: flex;
  flex:1;
  width: 100%;
  height:100vh;
  flex-direction: column;
  background-color: #F5F5F5;
  position: fixed;
}

.report-warp {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  /* justify-content: center; */
  margin-top: 20rpx;
}

.top-view {
  width: 100%;
  height: 88rpx;
  align-items: center;
  display: flex;
}

.report-title {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #1B1B1B;
  margin-left: 32rpx;
}

.cell-line {
  height:1rpx;
  width:100vw;
  background-color: #E6E6E6;
  margin-left: 32rpx;
}

.input-warp {
  display: flex;
  flex: 1;
  height: 88rpx;
  margin-top: 32rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  background-color: #F5F5F5;
  justify-content: center;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-radius: 6px;
}

.input-warp input {
  display: flex;
  width: 100%;
  flex: 1;
}

.search-btn {
  background-color: #27C886;
  display: flex;
  flex: 1;
  margin-left: 32rpx;
  margin-right: 32rpx;
  margin-top: 32rpx;
  border-radius: 10rpx;
  justify-content: center;
  align-items: center;
  height: 94rpx;
}

.search-btn text {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #FFFFFF;
  text-align: center;
}

.register-btn {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #27C886;
  text-align: right;
}

.register-warp {
  width: 100%;
  margin-top: 57rpx;
  margin-bottom: 55rpx;
  display: flex;
  justify-content: center;
}